{
  "name": "zombielandcda-back",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx --watch index.ts",
    "start:prod": "npm run db:migrate:deploy && node dist/index.js",
    "start:dev": "npm run db:migrate:deploy && npm run dev",
    "======= PRISMA =======": "========= PRIMSA ===========",
    "db:seed:orders": "tsx --env-file=.env ./src/models/seeds/orders.seeding.ts",
    "db:seed:activities": "tsx --env-file=.env ./src/models/seeds/activities.seeding.ts",
    "db:generate": "prisma generate --schema=./src/models/schema.prisma",
    "db:migrate:deploy": "prisma migrate deploy --schema=./src/models/schema.prisma",
    "db:migrate:dev": "prisma migrate dev --schema=./src/models/schema.prisma --name auto",
    "db:migrate:reset": "prisma migrate reset --force --schema=./src/models/schema.prisma",
    "db:studio": "prisma studio --schema=./src/models/schema.prisma",
    "======= DOCKER =======": "========= DOCKER ===========",
    "docker:up": "docker compose --env-file .env up --build -d",
    "docker:up:fast": "docker compose --env-file .env up",
    "docker:down": "docker compose --env-file .env down",
    "docker:restart": "npm run docker:down && npm run docker:up",
    "======= DOCKER EXEC =======": "========= DOCKER EXEC ===========",
    "docker:db:init": "bash init.database.sh",
    "docker:db:reset": "docker exec -it zombieland-api npm run db:migrate:reset",
    "docker:db:migrate:dev": "docker exec -it zombieland-api npm run db:migrate:dev",
    "docker:db:generate": "docker exec -it zombieland-api npm run db:generate",
    "docker:db:seed:orders": "docker exec -it zombieland-api npm run db:seed:orders",
    "docker:db:seed:activities": "docker exec -it zombieland-api npm run db:seed:activities",
    "======= ESLINT =======": "========= ESLINT ===========",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "======= TEST =======": "========= TEST ===========",
    "test:unit": "tsx --test ./**/*.unit.test.ts",
    "test:spec": "tsx --test --env-file=./test/config/.env.test --import ./test/config/global-setup.ts --experimental-test-isolation=none ./**/*.spec.test.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.5.0",
    "@types/nodemailer": "^7.0.1",
    "@types/sanitize-html": "^2.16.0",
    "@types/stripe": "^8.0.416",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "prisma": "^6.16.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "dependencies": {
    "@faker-js/faker": "^10.0.0",
    "@prisma/client": "^6.16.1",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "debug": "^4.4.3",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "nodemailer": "^7.0.6",
    "sanitize-html": "^2.17.0",
    "stripe": "^18.5.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.8",
    "zx": "^8.8.4"
  }
}
