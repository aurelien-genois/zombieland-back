{
  "name": "zombielandcda-back",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "tsx --watch src/app.ts",
    "=== PRISMA =": " ===== PRISMA ===== ",
    "db:seed": "tsx --env-file=.env ./src/models/seeding.ts",
    "db:generate": "prisma generate --schema=./src/models/schema.prisma",
    "db:migrate:deploy": "prisma migrate deploy --schema=./src/models/schema.prisma",
    "db:migrate:dev": "prisma migrate dev --schema=./src/models/schema.prisma --name auto",
    "db:migrate:reset": "prisma migrate reset --force --schema=./src/models/schema.prisma",
    "db:studio": "prisma studio --schema=./src/models/schema.prisma",
    "======= DOCKER =======": "========= DOCKER ===========",
    "docker:start": "npm run db:migrate:deploy && node dist/app.js",
    "docker:up": "docker compose --env-file .env up --build -d",
    "docker:down": "docker compose --env-file .env.docker down",
    "docker:restart": "npm run docker:down && npm run docker:up",
    "docker:up:fast": "docker compose --env-file .env.docker up -d"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^5.0.3",
    "prisma": "^6.16.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@prisma/client": "^6.16.1",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "zod": "^4.1.8"
  }
}
